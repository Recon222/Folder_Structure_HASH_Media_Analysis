{
  "version": "1.0.0",
  "templates": {
    "forensic_docs_occurrence": {
      "templateName": "Forensic Structure - Documents at Occurrence",
      "templateDescription": "Forensic folder structure with Documents folder at the occurrence number level",
      "structure": {
        "levels": [
          {
            "pattern": "{occurrence_number}",
            "fallback": "NO_OCCURRENCE"
          },
          {
            "pattern": "{business_name} @ {location_address}",
            "conditionals": {
              "business_only": "{business_name}",
              "location_only": "{location_address}",
              "neither": "NO_LOCATION"
            }
          },
          {
            "pattern": "{video_start_datetime}_to_{video_end_datetime}_DVR_Time",
            "dateFormat": "military",
            "fallback": "{current_datetime}"
          }
        ]
      },
      "documentsPlacement": 0,
      "archiveNaming": {
        "pattern": "{occurrence_number} {business_name} @ {location_address} Video Recovery.zip",
        "fallbackPattern": "{occurrence_number}_Video_Recovery.zip"
      },
      "metadata": {
        "exported_date": "2025-09-01T23:10:00.000000",
        "exported_by": "FolderStructureApp",
        "original_source": "custom"
      }
    }
  }
}